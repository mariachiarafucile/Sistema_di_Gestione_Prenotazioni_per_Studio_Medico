<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicas.project.template.address.view.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="700" prefHeight="400"
      style="-fx-background-color: #E0F7FA; -fx-padding: 20;">

    <!-- Titolo  -->
    <Label fx:id="titleLabel"
           text="Login"
           style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

    <!-- Riquadro bianco centrale -->
    <VBox spacing="12" alignment="CENTER"
          prefWidth="300" prefHeight="200"
          maxWidth="350"
          style="-fx-border-color: gray; -fx-border-width: 2;
             -fx-padding: 18; -fx-background-radius: 10; -fx-border-radius: 10;
             -fx-background-color: white;">


        <!-- Username riquadro -->
        <HBox alignment="CENTER">
            <TextField fx:id="usernameField"
                       promptText="Email"
                       prefWidth="160" minWidth="160" maxWidth="160"/>
        </HBox>

        <!-- Password riquadro -->
        <HBox alignment="CENTER">
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefWidth="160" minWidth="160" maxWidth="160"/>
        </HBox>

        <!-- Pulsante Accedi -->
        <Button fx:id="loginButton"
                text="Accedi"
                onAction="#onLogin"
                prefWidth="160" />

        <!-- Link registrati -->
        <Hyperlink fx:id="registerLink"
                   text="Registrati"
                   onAction="#onRegister"/>
    </VBox>

    <!-- Pulsante torna indietro -->
    <Button fx:id="backButton"
            text="Torna indietro"
            onAction="#onBack"
            prefWidth="160"/>
</VBox>
