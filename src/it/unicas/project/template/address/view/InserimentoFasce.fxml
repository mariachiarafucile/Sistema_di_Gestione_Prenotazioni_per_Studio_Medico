<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicas.project.template.address.view.InserimentoFasceController"
      spacing="15"
      alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #E0F7FA;"
      prefWidth="500" prefHeight="600">

    <Label text="Inserisci nuova fascia oraria"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Barra mese -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="prevButton" text="◀"/>
        <Label fx:id="meseLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button fx:id="nextButton" text="▶"/>
    </HBox>

    <HBox alignment="CENTER">
        <GridPane fx:id="calendarioGrid"
                  hgap="6" vgap="6"
                  alignment="CENTER"
                  style="-fx-padding: 8; -fx-border-color: transparent;"/>
    </HBox>

    <Label fx:id="giornoSelezionatoLabel"
           text="Giorno selezionato: nessuno"
           style="-fx-font-weight: bold;"/>

    <!-- Orari -->
    <GridPane hgap="12" vgap="10" alignment="CENTER">
        <Label text="Ora Inizio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="oraInizioCombo" prefWidth="100"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Ora Fine:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="oraFineCombo" prefWidth="100"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Salva" fx:id="salvaButton"
            style="-fx-padding: 6 12; -fx-font-size: 14;" onAction="#salvaFascia"/>
</VBox>
