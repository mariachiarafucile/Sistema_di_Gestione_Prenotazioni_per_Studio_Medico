<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unicas.project.template.address.view.SegretarioDashboardController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #E0F7FA;">

    <center>
        <VBox alignment="CENTER" spacing="50">

            <!-- Titolo -->
            <Label text="Benvenuto nella tua area personale!"
                   style="-fx-font-size: 25px; -fx-font-weight: bold;"/>

            <!-- Sottotitolo -->
            <Label text="Scegli un'opzione dal menu"
                   style="-fx-font-size: 18px; -fx-text-fill: #555555;"/>

            <!-- HBox con le tre icone e titoli sotto -->
            <HBox alignment="CENTER"
                  spacing="50">

                <!-- Icona Ricerca Pazienti -->
                <VBox alignment="CENTER" spacing="10">
                    <Button fx:id="ricercaButton"
                            prefWidth="150" prefHeight="150"
                            style="-fx-background-color: white;
                                   -fx-border-color: #CCCCCC;
                                   -fx-border-width: 2;
                                   -fx-border-radius: 20;
                                   -fx-background-radius: 20;">
                    </Button>
                    <Label text="Ricerca Pazienti"/>
                </VBox>

                <!-- Icona Aggiungi Paziente -->
                <VBox alignment="CENTER" spacing="10">
                    <Button fx:id="aggiungiButton"
                            prefWidth="150" prefHeight="150"
                            style="-fx-background-color: white;
                                   -fx-border-color: #CCCCCC;
                                   -fx-border-width: 2;
                                   -fx-border-radius: 20;
                                   -fx-background-radius: 20;">
                    </Button>
                    <Label text="Aggiungi Paziente"/>
                </VBox>

                <!-- Icona Portafoglio -->
                <VBox alignment="CENTER" spacing="10">
                    <Button fx:id="portafoglioButton"
                            prefWidth="150" prefHeight="150"
                            style="-fx-background-color: white;
                                   -fx-border-color: #CCCCCC;
                                   -fx-border-width: 2;
                                   -fx-border-radius: 20;
                                   -fx-background-radius: 20;">
                    </Button>
                    <Label text="Report Mensili"/>
                </VBox>

            </HBox>

        </VBox>
    </center>

</BorderPane>
