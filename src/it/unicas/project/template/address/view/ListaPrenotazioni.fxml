<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="rootVBox"
      fx:controller="it.unicas.project.template.address.view.ListaPrenotazioniController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #e0f7fa; -fx-padding: 20;">

    <!-- Titolo allineato a sinistra -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Prenotazioni del paziente"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Bottone per nuova prenotazione -->
    <HBox spacing="10" alignment="TOP_RIGHT">
        <Button text="Nuova Prenotazione" fx:id="nuovaPrenotazioneBtn" onAction="#onNuovaPrenotazione"/>
    </HBox>

    <!-- Controllo mese -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="◀" onAction="#mesePrecedente"/>
        <Label fx:id="meseLabel" text="Gennaio 2025" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Button text="▶" onAction="#meseSuccessivo"/>
    </HBox>

    <!-- Calendario -->
    <HBox alignment="CENTER">
        <GridPane fx:id="calendarioGrid" hgap="2" vgap="2" style="-fx-background-color: #e0f7fa;"/>
    </HBox>

    <!-- Lista prenotazioni del giorno selezionato -->
    <VBox fx:id="prenotazioniBox" spacing="5" style="-fx-background-color: #e0f7fa; -fx-padding: 10; -fx-border-color: #b2ebf2; -fx-border-width: 1;">
        <Label text="Seleziona un giorno verde per vedere le prenotazioni"/>
    </VBox>

</VBox>
