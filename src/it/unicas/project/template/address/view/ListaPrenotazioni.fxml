<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unicas.project.template.address.view.ListaPrenotazioniController"
      spacing="10"
      prefWidth="600"
      prefHeight="400"
      style="-fx-padding: 20; -fx-background-color: #E0F7FA;"

>

    <Label text="Prenotazioni del paziente"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- bottone per nuova prenotazione -->
    <HBox spacing="10" alignment="TOP_RIGHT">
        <Button text="Nuova Prenotazione" fx:id="nuovaPrenotazioneBtn" onAction="#onNuovaPrenotazione"/>
    </HBox>

    <VBox fx:id="prenotazioniBox" spacing="10"/>

</VBox>
